# Environment Variables for ArgusAI
# Copy this file to .env and fill in your values
# Note: For Cloudflare Workers, use .dev.vars instead of .env

# GitHub App Configuration
GITHUB_APP_ID=your-app-id
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# GitHub Token (Personal Access Token with Models API access)
GITHUB_TOKEN=github_pat_your_token_here

# Environment Configuration
ENVIRONMENT=development

# GitHub Models Configuration
GITHUB_MODEL=gpt-4o-mini

# Performance Configuration
MAX_DIFF_SIZE=500000
CONCURRENT_FILE_REVIEWS=3
UPDATE_EXISTING_REVIEWS=true

# Logging
LOG_LEVEL=debug

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn
SLACK_WEBHOOK_URL=your-slack-webhook-url