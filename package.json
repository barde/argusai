{
  "name": "argusai",
  "version": "0.1.0",
  "description": "Intelligent GitHub code review bot powered by LLMs on Cloudflare Workers",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --persist",
    "dev:remote": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "logs": "wrangler tail",
    "logs:prod": "wrangler tail --env production",
    "kv:list": "wrangler kv:key list --binding=CACHE",
    "kv:get": "wrangler kv:key get --binding=CACHE",
    "prepare": "husky || true"
  },
  "keywords": [
    "github",
    "code-review",
    "bot",
    "cloudflare-workers",
    "llm",
    "ai"
  ],
  "author": "ArgusAI Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@eslint/js": "^9.30.0",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.0.1",
    "@octokit/rest": "^22.0.0",
    "@octokit/webhooks-types": "^7.6.1",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
